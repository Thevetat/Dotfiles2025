## Name: 
## Desc: 
## Inputs:
## Usage:
resizejpg() {
    for i in *.jpg; 
        do name=`echo $i | cut -d'.' -f1`;
        echo $name;
        convert $i -resize "$*"% $name.jpg;
    done
}

theme = dark:TokyoNight Storm, light: TokyoNight Day


background-opacity = 0.95
background-blur = 20

font-size = 15

window-padding-balance = true

cursor-style = block
adjust-cell-height = 10%

window-save-state = always
macos-titlebar-style = transparent
confirm-close-surface = false

mouse-hide-while-typing = true
mouse-scroll-multiplier = 2

keybind = super+shift+s=new_split:right
keybind = super+shift+v=new_split:down

keybind = super+shift+left=goto_split:left
keybind = super+shift+down=goto_split:bottom
keybind = super+shift+up=goto_split:top
keybind = super+shift+right=goto_split:right

keybind = super+shift+ctrl+h=resize_split:left,10
keybind = super+shift+ctrl+j=resize_split:down,10
keybind = super+shift+ctrl+k=resize_split:up,10
keybind = super+shift+ctrl+l=resize_split:right,10

keybind = super+w=close_surface
keybind = shift+enter=text:\r

keybind = super+shift+t=new_tab
keybind = super+shift+n=next_tab
keybind = super+shift+b=previous_tab

# Clipboard settings for better integration
clipboard-read = allow
